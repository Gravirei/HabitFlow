# API Configuration
VITE_API_URL=https://api.example.com

# App Configuration
VITE_APP_NAME=Droid Timer
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=false

# Sentry Error Monitoring
# Get your DSN from: https://sentry.io/settings/projects/your-project/keys/
VITE_SENTRY_DSN=
# Enable Sentry in development (default: only in production)
VITE_ENABLE_SENTRY=false

# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Cloudflare Turnstile (CAPTCHA)
# Get your keys from: https://dash.cloudflare.com/?to=/:account/turnstile
# Sign up at: https://www.cloudflare.com/products/turnstile/
# Site Key: Public key (safe to expose in frontend)
VITE_TURNSTILE_SITE_KEY=your-turnstile-site-key-here
# Secret Key: Private key (NEVER expose in frontend! Backend only)
# TURNSTILE_SECRET_KEY — Backend secret. DO NOT add here.
# Set via Supabase Edge Function secrets: supabase secrets set TURNSTILE_SECRET_KEY=your-secret-key

# App base URL used by Edge Functions for redirects (password recovery)
# Dev example: http://localhost:3000
# Prod example: https://yourdomain.com
APP_BASE_URL=http://localhost:3000

# ── Integration API Keys ────────────────────────────────────────────────────

# Google Calendar Integration
# Get credentials from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GOOGLE_CLIENT_SECRET=your-google-client-secret
VITE_GOOGLE_REDIRECT_URI=http://localhost:3000/integrations/callback/google

# Notion Integration
# Get credentials from: https://www.notion.so/my-integrations
VITE_NOTION_CLIENT_ID=your-notion-client-id
VITE_NOTION_CLIENT_SECRET=your-notion-client-secret
VITE_NOTION_REDIRECT_URI=http://localhost:3000/integrations/callback/notion

# Slack Integration
# Get credentials from: https://api.slack.com/apps
VITE_SLACK_CLIENT_ID=your-slack-client-id
VITE_SLACK_CLIENT_SECRET=your-slack-client-secret
VITE_SLACK_REDIRECT_URI=http://localhost:3000/integrations/callback/slack

# Spotify Integration
# Get credentials from: https://developer.spotify.com/dashboard
VITE_SPOTIFY_CLIENT_ID=your-spotify-client-id
VITE_SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
VITE_SPOTIFY_REDIRECT_URI=http://localhost:3000/integrations/callback/spotify

# Google Fit Integration (reuses Google OAuth credentials)
# Same Google Cloud Console project, enable Fitness API
VITE_GOOGLE_FIT_REDIRECT_URI=http://localhost:3000/integrations/callback/google-fit
